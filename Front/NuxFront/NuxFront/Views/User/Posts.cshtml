
@{
    ViewBag.Title = "User Posts";
}
@model  List<NuxFront.Models.Post>

<div class="modal-header">
    @Html.ActionLink("Regresar", "Details", "User", new { id = Model[0].UserId }, new { @class = "close" })
    <h4 class="modal-title" id="myModalLabel">User > User Information > Posts</h4>
</div>
<hr />
<div class="col-sm-12 table-responsive table-condensed table-sm" style="font-size:small">
    <table class="table table-hover" id="tablaUsers">
        @if (Model != null)
        {
            <thead class="thead-light">
                <tr>
                    <th>User Id</th>
                    <th>Id</th>
                    <th>Title</th>
                    <th>Body</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.Count; i++)
                {
                    <tr>

                        <td>
                            @Html.DisplayFor(item => item[i].UserId)
                        </td>
                        <td>
                            @Html.DisplayFor(item => item[i].Id)
                        </td>
                        <td>
                            @Html.DisplayFor(item => item[i].Title)
                        </td>
                        <td>
                            @Html.DisplayFor(item => item[i].Body)
                        </td>

                    </tr>
                }
            </tbody>
        }
    </table>
</div>


